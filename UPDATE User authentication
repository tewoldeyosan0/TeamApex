# update_user_authentication.py
# Sample code to simulate updating user authentication

users = {
    "alice": "password123",
    "bob": "qwerty",
    "charlie": "letmein"
}

def authenticate(username, password):
    """Check if username and password match."""
    if username in users and users[username] == password:
        return True
    else:
        return False

def update_password(username, new_password):
    """Update the user's password."""
    if username in users:
        users[username] = new_password
        print(f"Password updated for {username}.")
    else:
        print(f"User {username} not found.")

if __name__ == "__main__":
    print(authenticate("alice", "password123"))  # Should print True
    update_password("alice", "newpassword456")
    print(authenticate("alice", "newpassword456"))  # Should print True
